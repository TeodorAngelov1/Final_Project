@using PcStore.Web.ViewModels.Accessories;
@using static PcStore.Common.AdminConstant;
@model AccessoryDetailsModel;
@{
    ViewData["Title"] = "Accessory Details";
}

<div class="container mt-5">
    <h2 class="mb-4">@Model.Brand</h2>

    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" alt="@Model.Brand" class="img-fluid rounded shadow">
        </div>
        <div class="col-md-6">
            <h4>Description</h4>
            <p>@Model.Description</p>

            <h4>Price</h4>
            <p class="text-success fs-4">$@Model.Price</p>
            @if (User?.IsInRole(AdminRoleName) == true)
            {
                <a asp-controller="Accessory" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">Edit</a>
                <a asp-controller="Accessory" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-sm">Delete</a>
                <a asp-controller="Accessory" asp-action="Index" class="btn btn-secondary btn-lg mt-3">Back to Accessories</a>
            }
            else
            {
                <a asp-controller="Accessory" asp-action="Index" class="btn btn-secondary btn-lg mt-3">Back to Accessories</a>
            }
        </div>
    </div>
</div>