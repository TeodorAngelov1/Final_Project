@model ErrorViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Error @Model.StatusCode</title>
</head>
<body>
    <h1>Error @Model.StatusCode</h1>
    <p>@Model.Message</p>
    @if (!string.IsNullOrEmpty(Model.Details))
    {
        <p>@Model.Details</p>
    }
</body>
</html>
