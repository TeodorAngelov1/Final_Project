@using PcStore.Web.ViewModels.Laptop
@model EditLaptopModel
@{
    ViewData["Title"] = "Edit Laptop";
}

<div class="container mt-5">
    <h2 class="mb-4">Edit Laptop</h2>

    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="LaptopName" class="form-label">Name</label>
            <input asp-for="LaptopName" class="form-control" />
            <span asp-validation-for="LaptopName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="LaptopImageUrl" class="form-label">Image URL</label>
            <input asp-for="LaptopImageUrl" class="form-control" />
            <span asp-validation-for="LaptopImageUrl" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="LaptopDescription" class="form-label">Description</label>
            <textarea asp-for="LaptopDescription" class="form-control"></textarea>
            <span asp-validation-for="LaptopDescription" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="LaptopPrice" class="form-label">Price</label>
            <input asp-for="LaptopPrice" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="LaptopPrice" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-controller="Laptop" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
